<UserControl x:Class="TestPCBAForGW040x.UserControls.ucLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPCBAForGW040x.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">

    <Border CornerRadius="5" Background="#FC4243" BorderThickness=".5">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Background="#FC4243" Foreground="White" FontSize="30" FontWeight="SemiBold" >Login Failed</Label>
                <Label FontSize="14" Foreground="White" Margin="0,10,0,0">Username hoặc Password không đúng.</Label>
                <Label FontSize="14" Foreground="White" Margin="0,10,0,0">Vui lòng kiểm tra lại.</Label>
            </StackPanel>
        </Grid>
        
    </Border>
</UserControl>
