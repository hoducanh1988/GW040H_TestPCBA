                                                <DataTrigger Binding="{Binding ElementName=lblLAN2, Path=Content}" Value="FAIL">
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=lblLAN2, Path=Content}" Value="--">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=lblLAN2, Path=Content}" Value="Waiting">
