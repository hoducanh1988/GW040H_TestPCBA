                            </Button.ToolTip>
                        </Button>
                        <Button Visibility="Collapsed" Foreground="White" FontWeight="SemiBold" Background="#333333" x:Name="btnReadGPON" Click="MAC_btnRead_Click"  FontSize="15" Margin="0,5,0,0" Height="30" Content="Đọc mã GPON SN">
                            <Button.Style>
