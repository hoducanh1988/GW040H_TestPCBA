                        <RichTextBox x:Name="rtbLAN" Foreground="Black" FontWeight="SemiBold" Margin="0,10,0,0" Height="170" Background="{StaticResource colorBackground}" IsReadOnly="True" BorderThickness="0" Block.LineHeight="1" Padding="0,5,0,0">
                        </RichTextBox>
                        <Label Foreground="{StaticResource colorTextNG}" Margin="0,5,0,0" FontWeight="SemiBold" Content="Kết quả kiểm tra cổng LAN:"/>
                        <StackPanel Margin="0,5,0,0">
                            <WrapPanel>
                                <Label FontSize="15" FontWeight="Bold">PORT 1:</Label>
                                <Label x:Name="lblLAN1" FontSize="15" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=lblLAN1, Path=Content}" Value="PASS">
