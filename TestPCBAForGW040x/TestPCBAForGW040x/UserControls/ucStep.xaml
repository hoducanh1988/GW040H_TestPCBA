                                                <DataTrigger Binding="{Binding ElementName=lblReset, Path=Content}" Value="Waiting">
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextWait}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </WrapPanel>
                            <WrapPanel>
                                <Label FontSize="15" FontWeight="Bold">PHÁN ĐỊNH TỔNG:</Label>
                                <Label x:Name="lblButtonTotal" FontSize="15" FontWeight="Bold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=lblButtonTotal, Path=Content}" Value="PASS">
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=lblButtonTotal, Path=Content}" Value="FAIL">
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=lblButtonTotal, Path=Content}" Value="--">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=lblButtonTotal, Path=Content}" Value="Waiting">
                                                    <Setter Property="Foreground" Value="{StaticResource colorTextWait}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </WrapPanel>
                            <!--<Label FontWeight="SemiBold" Content="Thông báo lỗi:"/>
                            <Label Margin="0,0,0,0" Foreground="{StaticResource colorTextNG}" x:Name="lblButtonMessage" FontSize="13" Content="" HorizontalContentAlignment="Left"></Label>-->
                        </StackPanel>
                    </StackPanel>
                </Border>
            </TabItem>
            
        </TabControl>
    </Border>
</UserControl>
