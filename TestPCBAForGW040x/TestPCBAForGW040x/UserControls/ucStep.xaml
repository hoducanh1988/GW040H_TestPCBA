<UserControl x:Class="TestPCBAForGW040x.UserControls.ucStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPCBAForGW040x.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">

    <Border CornerRadius="5" Background="{StaticResource colorBackground}" BorderBrush="{StaticResource colorBorder}" BorderThickness=".5">
        <TabControl SelectionChanged="TabControl_SelectionChanged" Margin="2" BorderThickness="0" Background="{StaticResource colorBackground}">
          
            <!--Upload Firmware-->
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="01. Upload FW" FontWeight="SemiBold"/>
                </TabItem.Header>
                <Border Background="{StaticResource colorBackground}" CornerRadius="0,0,5,5" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                    <StackPanel Margin="10,20,10,5">
                        <Button Foreground="White" FontWeight="SemiBold" Background="#333333" x:Name="btnReadFW" Click="btnReadFW_Click" FontSize="15" Margin="0,5,0,0" Height="30" Content="Đọc Firmware Version">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=HELP}" Value="true">
                                            <Setter Property="ToolTipService.ShowDuration" Value="120000"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=HELP}" Value="false">
                                            <Setter Property="ToolTipService.ShowDuration" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.ToolTip>
                                <ToolTip x:Name="ttReadFW" Background="Transparent" BorderThickness="0">
                                    <Border CornerRadius="5" Background="#0b4213" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                                        <StackPanel Margin="5">
                                            <TextBlock Foreground="White" FontWeight="Bold">TRÌNH TỰ THAO TÁC ĐỌC FW:</TextBlock>
                                            <TextBlock></TextBlock>
                                            <TextBlock Foreground="White">Bước 1. Kết nối USB debug giữa PC và ONT</TextBlock>
                                            <TextBlock Foreground="White">Bước 2. Bật nguồn ONT</TextBlock>
                                            <TextBlock Foreground="White">Bước 3. Chờ đến khi đèn WLAN của ONT sáng màu xanh</TextBlock>
                                            <TextBlock Foreground="White">Bước 4. Click nút 'Đọc Firmware Version'</TextBlock>
                                            <TextBlock></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                      
                        <Button Foreground="White" FontWeight="SemiBold" Background="#333333" x:Name="btnUpFW" Click="btnUpFW_Click" FontSize="15" Margin="0,5,0,0" Height="30" Content="Nạp Firmware">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=HELP}" Value="true">
                                            <Setter Property="ToolTipService.ShowDuration" Value="120000"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=HELP}" Value="false">
                                            <Setter Property="ToolTipService.ShowDuration" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.ToolTip>
                                <ToolTip Background="Transparent" BorderThickness="0">
                                    <Border CornerRadius="5" Background="#0b4213" BorderBrush="{StaticResource colorBorder}" BorderThickness="1">
                                        <StackPanel Margin="5">
                                            <TextBlock Foreground="White" FontWeight="Bold">TRÌNH TỰ THAO TÁC NẠP FW:</TextBlock>
                                            <TextBlock></TextBlock>
                                            <TextBlock Foreground="White">Bước 1. Kết nối dây LAN, USB debug giữa PC và ONT</TextBlock>
                                            <TextBlock Foreground="White">Bước 2. Click nút 'Nạp Firmware'</TextBlock>
                                            <TextBlock Foreground="White">Bước 3. Bật nguồn ONT</TextBlock>
                                            <TextBlock Foreground="White">Bước 4. Phần mềm tự động nạp FW cho ONT</TextBlock>
                                            <TextBlock></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <RichTextBox x:Name="rtbFW" Foreground="Black" FontWeight="SemiBold" Margin="0,10,0,0" Height="250" Background="{StaticResource colorBackground}" IsReadOnly="True" BorderThickness="0" Block.LineHeight="1" Padding="0,5,0,0">
                        </RichTextBox>
                        <Label Foreground="{StaticResource colorTextNG}" FontWeight="SemiBold" Content="Kết quả:"/>
                        <Label Margin="0,-20,0,0" x:Name="lblFWResult" HorizontalContentAlignment="Center" FontSize="60" FontWeight="Bold" Content="--">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=lblFWResult, Path=Content}" Value="PASS">
                                            <Setter Property="Foreground" Value="{StaticResource colorTextOK}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=lblFWResult, Path=Content}" Value="FAIL">
                                            <Setter Property="Foreground" Value="{StaticResource colorTextNG}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=lblFWResult, Path=Content}" Value="--">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=lblFWResult, Path=Content}" Value="Waiting">
                                            <Setter Property="Foreground" Value="{StaticResource colorTextWait}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                        <Label Margin="0,-10,0,0" Foreground="{StaticResource colorTextNG}" x:Name="lblFWMessage" FontSize="17" Content="--" HorizontalContentAlignment="Center"></Label>
                    </StackPanel>
                </Border>
            </TabItem>

